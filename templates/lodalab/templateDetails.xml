<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension
	version="1.6"
	type="template"
	client="site">
	<name>Loda Lab</name>
	<creationDate>7/13/11</creationDate>
	<author>Dave Rothfarb</author>
	<authorEmail>dave_rothfarb@dfci.harvard.edu</authorEmail>
	<copyright>Copyright (C) 2005 - 2011 Open Source Matters, Inc. All rights reserved.</copyright>
	<description>LODA_LAB_XML_DESCRIPTION</description>
	<files>
		<folder>html</folder>
		<folder>css</folder>
		<folder>images</folder>
		<folder>language</folder>
		<filename>index.php</filename>
		<filename>index.html</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
	</files>

	<positions>
		<position>menu</position>
		<position>subnav</position>
		<position>institutions</position>
		<position>homepage_graphic</position>
		<position>boilerplate</position>
		<position>small_header</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_atomic.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_atomic.sys.ini</language>
	</languages>

</extension>
